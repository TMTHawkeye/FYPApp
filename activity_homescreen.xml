<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    >

    <Button
        android:id="@+id/ctrl_button"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:text="Control Appliances"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425"
        android:fontFamily="@font/andika_new_basic"
        />

    <Button
        android:id="@+id/notif_button"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:text="Notifications"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904"
        android:fontFamily="@font/andika_new_basic"

        />

    <Button
        android:id="@+id/mng_button"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:text="Manage Connection of Appliances"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        android:fontFamily="@font/andika_new_basic"
        />

    <Button
        android:id="@+id/view_button"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:text="View Consumption History"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66"
        android:fontFamily="@font/andika_new_basic"
        />

    <Button
        android:id="@+id/recom_button"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_button"
        android:text="Recommendations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779"
        android:fontFamily="@font/andika_new_basic"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/admins"
        tools:srcCompat="@drawable/admins" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="324dp"
        android:layout_height="54dp"
        android:text="Rs. 0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267"
        android:fontFamily="@font/andika_new_basic"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="324dp"
        android:layout_height="36dp"
        android:fontFamily="@font/andika_new_basic"
        android:text="Total Estimated Bill till now:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />

</androidx.constraintlayout.widget.ConstraintLayout>